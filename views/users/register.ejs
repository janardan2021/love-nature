<% layout('layouts/boilerplate')%>

<div class="flex flex-col w-4/5 lg:w-3/5 mx-auto mt-20 mb-40">
    <p class="text-xl font-bold text-center">Register</p>
    <form action="/register" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label fonte-semibold" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required autofocus>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label fonte-semibold" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label fonte-semibold" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="bg-slate-600 w-fit text-white font-semibold py-2 px-4
        hover:bg-slate-700 transition ease-in-out rounded-md ">Register</button>
    </form>

</div>
  